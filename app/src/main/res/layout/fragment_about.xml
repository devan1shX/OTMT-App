<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_about.AboutFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Collaborate With Us"
                android:textColor="@color/collaborate_primary_teal"
                android:textSize="28sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_underline"
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/collaborate_primary_teal" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Partner with us to drive innovation and achieve mutual success. We welcome collaborations across various domains to bring transformative ideas to life."
                android:textColor="@color/collaborate_text_secondary"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_schedule_meeting"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/collaborate_primary_teal"
                    android:paddingVertical="16dp"
                    android:text="Schedule Meeting"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit_details"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:paddingVertical="16dp"
                    android:text="Submit Your Details"
                    android:textAllCaps="false"
                    android:textColor="@color/collaborate_primary_teal"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/collaborate_primary_teal"
                    app:strokeWidth="1.5dp" />
            </LinearLayout>

            <View
                android:id="@+id/separator_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@color/light_grey_separator" />

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_chat_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="false">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/teal_circle_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_chat"
                    app:tint="@android:color/white"
                    android:contentDescription="Contact Icon" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/vertical_line"
                android:layout_width="1.5dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey_separator" />

            <View
                android:id="@+id/separator_view_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey_separator" />

            <LinearLayout
                android:id="@+id/contact_us_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/tv_contact_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Contact Us"
                    android:textColor="@color/collaborate_primary_teal"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_contact_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Connect with our team for personalized support and collaboration opportunities."
                    android:textColor="@color/collaborate_text_secondary"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:id="@+id/layout_address_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_card_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_background_light_teal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location"
                            app:tint="@color/collaborate_primary_teal"
                            android:contentDescription="Location Icon" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="3dp"
                            android:text="A-303, Academic Building,\nIIITD, Okhla Industrial\nEstate, Phase III"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_phone_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/contact_card_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_background_light_teal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phone"
                                app:tint="@color/collaborate_primary_teal"
                                android:contentDescription="Phone Icon" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Phone"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:text="011 -\n26907550"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="14sp"
                            android:autoLink="phone"
                            android:textColorLink="@color/collaborate_primary_teal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_email_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/contact_card_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_background_light_teal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_mail"
                                app:tint="@color/collaborate_primary_teal"
                                android:contentDescription="Email Icon" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Email"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_personal_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:text="alok@iiitd.ac.in"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="14sp"
                            android:autoLink="email"
                            android:textColorLink="@color/collaborate_primary_teal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_office_email_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/contact_card_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_circle_background_light_teal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_office_email"
                            app:tint="@color/collaborate_primary_teal"
                            android:contentDescription="Office Email Icon" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Office E-Mail"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_office_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="3dp"
                            android:text="info@iiitd.ac.in"
                            android:textColor="@color/collaborate_text_secondary"
                            android:textSize="14sp"
                            android:autoLink="email"
                            android:textColorLink="@color/collaborate_primary_teal" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_send_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardPreventCornerOverlap="false"
                    app:strokeColor="@color/light_grey_separator"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send Us a Message"
                            android:textColor="#328D89"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Have a question or want to work together? Fill out the form below, and we'll get back to you as soon as possible."
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp"/>

                        <EditText
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Full Name"
                            android:inputType="textPersonName"
                            android:padding="12dp"
                            android:textColor="#000000"  android:textColorHint="#A9A9A9"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Email Address *"
                            android:inputType="textEmailAddress"
                            android:padding="12dp"
                            android:textColor="#000000"  android:textColorHint="#A9A9A9"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Phone Number"
                            android:inputType="phone"
                            android:padding="12dp"
                            android:textColor="#000000"  android:textColorHint="#A9A9A9"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Subject *"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="#000000"  android:textColorHint="#A9A9A9"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_your_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/edit_text_background"
                            android:hint="Your Message *"
                            android:inputType="textMultiLine"
                            android:minHeight="100dp"
                            android:padding="12dp"
                            android:textColor="#000000"  android:textColorHint="#A9A9A9"
                            android:textSize="16sp"
                            android:gravity="top|start" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_send_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="32dp"
                            android:paddingStart="32dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="32dp"
                            android:paddingBottom="12dp"
                            android:text="Send Message"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:backgroundTint="#328D89"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>